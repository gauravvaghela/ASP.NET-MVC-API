@model IEnumerable<WEB_MVC.Models.mvcEmployee>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    <a href="@Url.Action("AddOrDelete","Employee")" class="btn btn-danger"><i class="fa fa-plus"> Create</i></a>
</p>
<table class="table table-striped">
    <thead class="table-heading">
        <tr>            
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Position)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Age)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Salary)
            </th>
            <th>
                Action
            </th>
        </tr>
    </thead>
@foreach (var item in Model) {
    <tr>        
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Position)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Age)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Salary)
        </td>
        <td>
            <a href="@Url.Action("AddOrDelete", "Employee", new { id = item.EmpId})" class="btn btn-danger"> Edit</a> |            
            <a href="@Url.Action("Delete", "Employee", new { id = item.EmpId})" class="btn btn-danger"> Delete</a> 
        </td>
    </tr>
}

</table>
